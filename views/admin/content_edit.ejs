<ol class="breadcrumb">
    <li><a href="/">管理首页</a></li>
    <li><span>内容修改</span></li>
</ol>

<h3>内容修改 - <%=content.title%></h3>

<form role="form" method="post" action="/admin/content/edit">
    <input type="hidden" name="id" value="<%=content._id%>">
    <div class="form-group">
        <label for="title">分类：</label>
        <select name="category" id="category" class="form-control">
            <%types.forEach(function(item){%>
            <%if (content.type == item.name){%>
                <option value="<%=item.name%>" selected><%=item.name%></option>
            <%}else{%>
                <option value="<%=item.name%>"><%=item.name%></option>
            <%}%>
            <%})%>
        </select>
    </div>

    <div class="form-group">
        <label for="title">标题：</label>
        <input type="text" value="<%=content.title%>" class="form-control" id="title" placeholder="请输入内容标题" name="title">
    </div>

    <div class="form-group">
        <label for="description">简介：</label>
        <textarea name="description" id="description" class="form-control" rows="5" placeholder="请输入内容简介">
            <%=content.description%>
        </textarea>
    </div>

    <div class="form-group">
        <label for="content">内容：</label>
        <textarea name="content" id="content" class="form-control" rows="10" placeholder="请输入内容">
            <%=content.content%>
        </textarea>
    </div>

    <button type="submit" class="btn btn-default">提交</button>
</form>
